{
    "name": "get_activity_poi_overview",
    "description": "获取POI（景点/活动）详细信息，包括基本信息、时间信息、价格信息、演出信息等",
    "method": "POST",
    "path": "/api/poi/detail",
    "input_params": {
        "traceid": {
            "name": "traceid",
            "type": "string",
            "description": "请求追踪ID",
            "required": true,
            "constraints": {
                "pattern": "^[a-f0-9]{8}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{4}-[a-f0-9]{12}$"
            }
        },
        "poiId": {
            "name": "poiId",
            "type": "integer",
            "description": "POI唯一标识ID",
            "required": true,
            "constraints": {
                "minimum": 1
            }
        },
        "coordinate": {
            "name": "coordinate",
            "type": "object",
            "description": "坐标信息",
            "required": true,
            "constraints": {
                "properties": {
                    "coordinateType": "string",
                    "longitude": "number",
                    "latitude": "number"
                }
            }
        },
        "scene": {
            "name": "scene",
            "type": "string",
            "description": "业务场景标识",
            "required": true,
            "constraints": {
                "enum": ["ticket_detail", "poi_detail", "activity_detail"]
            }
        },
        "head": {
            "name": "head",
            "type": "object",
            "description": "请求头信息，包含认证和扩展信息",
            "required": true,
            "constraints": {
                "properties": {
                    "sauth": "string",
                    "extension": "array",
                    "lang": "string",
                    "syscode": "string",
                    "appid": "string",
                    "sid": "string",
                    "auth": "string",
                    "cver": "string",
                    "ctok": "string",
                    "cid": "string"
                }
            }
        }
    },
    "output_params": {
        "ResponseStatus": {
            "name": "ResponseStatus",
            "type": "object",
            "description": "响应状态信息",
            "required": true,
            "constraints": {
                "properties": {
                    "Timestamp": "string",
                    "Ack": "string",
                    "Errors": "array"
                }
            }
        },
        "result": {
            "name": "result",
            "type": "integer",
            "description": "结果状态码，0表示成功",
            "required": true,
            "constraints": {
                "enum": [0, 1, -1]
            }
        },
        "useLocalCache": {
            "name": "useLocalCache",
            "type": "boolean",
            "description": "是否使用本地缓存",
            "required": true
        },
        "basicInfo": {
            "name": "basicInfo",
            "type": "object",
            "description": "POI基本信息",
            "required": true,
            "constraints": {
                "properties": {
                    "poiId": "integer",
                    "businessId": "integer",
                    "coordinate": "object",
                    "poiType": "integer",
                    "poiName": "string",
                    "districtId": "integer",
                    "districtName": "string",
                    "address": "string",
                    "activityType": "integer",
                    "hotScore": "string"
                }
            }
        },
        "timeInfo": {
            "name": "timeInfo",
            "type": "object",
            "description": "时间相关信息",
            "required": true,
            "constraints": {
                "properties": {
                    "timeDesc": "string",
                    "tips": "string",
                    "timeList": "array",
                    "openStatusType": "integer"
                }
            }
        },
        "imageInfo": {
            "name": "imageInfo",
            "type": "object",
            "description": "图片相关信息",
            "required": true,
            "constraints": {
                "properties": {
                    "poiPhotoImageList": "array",
                    "isBigType": "boolean",
                    "backgroundImage": "string",
                    "jumpUrl": "string"
                }
            }
        },
        "priceInfo": {
            "name": "priceInfo",
            "type": "object",
            "description": "价格信息",
            "required": true,
            "constraints": {
                "properties": {
                    "price": "number",
                    "priceType": "string",
                    "priceTypeDesc": "string"
                }
            }
        },
        "channelInfo": {
            "name": "channelInfo",
            "type": "object",
            "description": "渠道信息",
            "required": false,
            "constraints": {
                "properties": {
                    "name": "string",
                    "icon": "string",
                    "jumpUrl": "string"
                }
            }
        },
        "concertInfo": {
            "name": "concertInfo",
            "type": "object",
            "description": "演唱会相关信息",
            "required": false,
            "constraints": {
                "properties": {
                    "concertInfoList": "array"
                }
            }
        },
        "saleInfo": {
            "name": "saleInfo",
            "type": "object",
            "description": "销售状态信息",
            "required": true,
            "constraints": {
                "properties": {
                    "saleStatus": "integer",
                    "hasSale": "boolean",
                    "hasStockOut": "boolean",
                    "isBackorderAllowed": "boolean",
                    "isBookable": "boolean"
                }
            }
        },
        "introductionInfo": {
            "name": "introductionInfo",
            "type": "object",
            "description": "介绍信息",
            "required": false,
            "constraints": {
                "properties": {
                    "introduce": "string",
                    "actorName": "string",
                    "instructionImages": "array"
                }
            }
        }
    },
